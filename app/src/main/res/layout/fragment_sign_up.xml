<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg2"
    tools:context=".view.SignUpFragment">

    <View
        android:id="@+id/view_signup"
        android:layout_width="347dp"
        android:layout_height="557dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/white_rounded_rectangle"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="517dp"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/view_signup"
        app:layout_constraintEnd_toEndOf="@+id/view_signup"
        app:layout_constraintStart_toStartOf="@+id/view_signup"
        app:layout_constraintTop_toTopOf="@+id/view_signup">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_7" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_11" />

        <EditText
            android:id="@+id/editTextnameText"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_inputs"
            android:elevation="15dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextEpostaText"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_inputs"
            android:elevation="15dp"
            android:ems="10"
            android:hint="E-Posta"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPasswordText"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_inputs"
            android:elevation="15dp"
            android:ems="10"
            android:hint="******"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_signup"
            android:layout_width="295dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mybutton"
            android:text="Kayıt Ol"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="667dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="15dp">


            <TextView
                android:id="@+id/alttext"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Hesabınız var mı?"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/girisyap_text"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="20dp"
                android:text="Giriş"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

