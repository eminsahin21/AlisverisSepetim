<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="350dp"
    android:padding="20dp"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:text="Sepetim"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/sepetNameDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="14sp"
            android:elevation="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_inputs"
            android:hint="Sepetinizi isimlendirin..."
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/markali_markasiz_button_bg"
            android:text="Markalı Liste"
            android:textColor="@color/green"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/markali_markasiz_button_bg"
            android:text="Markasız Liste"
            android:textColor="@color/green" />

        </LinearLayout>

        <Button
            android:id="@+id/make_basket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/mybutton"
            android:text="Sepet Oluştur" />

    </LinearLayout>
</LinearLayout>
