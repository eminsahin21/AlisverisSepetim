<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".view.LoginFragment">


    <View
        android:id="@+id/view_login"
        android:layout_width="347dp"
        android:layout_height="557dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/white_rounded_rectangle"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="517dp"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_login"
        app:layout_constraintEnd_toEndOf="@+id/view_login"
        app:layout_constraintStart_toStartOf="@+id/view_login"
        app:layout_constraintTop_toTopOf="@+id/view_login">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_7" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/img" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_inputs"
            android:elevation="15dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="E-Posta"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#918B8B"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="305dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_inputs"
            android:elevation="15dp"
            android:ems="10"
            android:hint="****"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="373dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="295dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/mybutton"
            android:text="Giriş"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="667dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_8" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:elevation="20dp"
            android:src="@drawable/img_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center">


            <TextView
                android:id="@+id/textView"
                android:layout_width="20dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="30dp"
                android:text="Hesabınız yok mu?" />

            <TextView
                android:id="@+id/kayitol_text"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="20dp"
                android:text="Kayıt Ol"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








